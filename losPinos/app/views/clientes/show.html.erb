<div id="pad-wrapper" class="new-user">
  <div class="row-fluid header">
    <h3>Ver Cliente</h3>
  </div>

  <div class="row-fluid form-wrapper">
    <!-- left column -->
    <div class="span9 with-sidebar">
        <div class="container"><p id="notice"><%= notice %></p>
<table class="table table-hover">

<tr>
  <td><strong>Nombre:</strong></td>
  <td><%= @cliente.nombre %></td>
</tr>

<tr>
  <td><strong>Apellido:</strong></td>
  <td><%= @cliente.apellido %></td>
</tr>

<tr>
  <td><strong>Fecha nac:</strong></td>
  <td><%= @cliente.fecha_nac %></td>
</tr>

<tr>
  <td><strong>Nacionalidad:</strong></td>
  <td><%= @cliente.nacionalidad %></td>
</tr>

<tr>
  <td><strong>Documento:</strong></td>
  <td><%= @cliente.documento %></td>
</tr>

<tr>
  <td><strong>Documento tipo:</strong></td>
  <td><%= @cliente.documento_tipo %></td>
</tr>

<tr>
  <td><strong>Comentarios:</strong></td>
  <td><%= @cliente.comentarios %></td>
</tr>

<tr>
  <td><strong>Email:</strong></td>
  <td><%= @cliente.email %></td>
</tr>
</table>
<%= link_to "Volver", clientes_path , class: "btn btn-default", style: "color: #0078d9; font-size: 11px; margin-left: 5px; float: right;" %>
      </div>
    </div>
  </div>
</div>
