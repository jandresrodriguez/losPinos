<h1 style="margin-top: 20px; margin-left: 10px; margin-bottom: 20px;" >Listado de clientes</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Fecha nac</th>
      <th>Nacionalidad</th>
      <th>Documento</th>
      <th>Documento tipo</th>
      <th>Comentarios</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.apellido %></td>
        <td><%= cliente.fecha_nac.strftime("%m-%d-%Y") %></td>
        <td><%= cliente.nacionalidad %></td>
        <td><%= cliente.documento %></td>
        <td><%= cliente.documento_tipo %></td>
        <td><%= cliente.comentarios %></td>
        <td><%= cliente.email %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente), class: 'btn btn-mini' %> 
        <%= link_to 'Eliminar', cliente_path(cliente), :method => :delete, :confirm => 'Estas seguro que desea eliminar el cliente?', class: 'btn btn-mini btn-danger',style: 'color: white; font-weight: bold;' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Cliente', new_cliente_path %>
