<%= form_for(@habitacion) do |f| %>
    <% if @habitacion.errors.any? %>
      <div class="alert fade in alert-danger alert-dismissable"><button aria-hidden="true" class="close" data-dismiss="alert" type="button">Ã—</button>
        <ul>
          <% @habitacion.errors.full_messages.each do |msg| %>
            <%= content_tag :li, msg, :id => "error_#{msg}" if msg.is_a?(String) %>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="span12 field-box">
        <label>Numero:</label>
        <%= f.text_field(:nombre, class: "has-error") %><br />
    </div>
    <div class="span12 field-box textarea">
        <label>Descripcion:</label>
        <%= f.text_area(:descripcion, class: "span9") %><br />
        <span class="charactersleft">90 characters remaining. Field limited to 100 characters</span>
    </div>
    <div class="span12 field-box">
        <label>Disponibilidad:</label>
        <%= f.select :disponible, [['Disponible', true], ['No Disponible', false]] %> 
    </div>
    <div class="span12 field-box">
        <label>Numero camas singles:</label>
        <%= f.select :nro_camas_single, (0..10) %> 
    </div>
    <div class="span12 field-box">
        <label>Numero camas dobles:</label>
        <%= f.select :nro_camas_matrimoniales, (0..10) %> 
    </div>
    <div class="span12 field-box textarea">
        <label>Comentarios:</label>
        <%= f.text_area(:comentarios, class: "span9") %><br />
        <span class="charactersleft">90 characters remaining. Field limited to 100 characters</span>
    </div>
    <div class="span11 field-box actions">
      <%= f.submit "Crear Habitacion", class:"btn-glow primary"  %>
        <span>OR</span>
        <%= link_to "Volver", habitacions_path , class: "btn btn-default", style: "color: #0078d9; font-size: 11px; margin-left: 5px;" %>
    </div>
<% end %>
