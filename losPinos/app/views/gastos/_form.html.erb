<%= form_for(@gasto) do |f| %>
    <% if @gasto.errors.any? %>
      <div class="alert fade in alert-danger alert-dismissable"><button aria-hidden="true" class="close" data-dismiss="alert" type="button">Ã—</button>
        <ul>
          <% @gasto.errors.full_messages.each do |msg| %>
            <%= content_tag :li, msg, :id => "error_#{msg}" if msg.is_a?(String) %>
          <% end %>
        </ul>
      </div>
    <% end %>


  <div class="span12 field-box">
    <label>Rubro:</label>
    <%= f.text_field(:rubro, class: "span9") %><br />
  </div>
  <div class="span12 field-box">
    <label>Fecha:</label>
    <%= f.date_select :fecha , order: [:day, :month, :year], start_year: Time.now.year - 10, end_year: Time.now.year , use_month_names: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre']%> <br />
  </div>
  <div class="span12 field-box">
    <label>Monto:</label>
    <%= f.text_field(:monto, class: "span9") %><br />
  </div>  
  <div class="span12 field-box">
    <label>Moneda:</label>
    <%= f.text_field(:moneda, class: "span9") %><br />
  </div> 
  <div class="span12 field-box textarea">
      <label>Comentarios:</label>
      <%= f.text_area(:comentarios, class: "span9") %><br />
      <span class="charactersleft">90 characters remaining. Field limited to 100 characters</span>
  </div>
  <div class="span11 field-box actions">
    <%= f.submit "Ingresar Gasto", class:"btn-glow primary"  %>
      <span>OR</span>
     <%= link_to "Volver", gastos_path , class: "btn btn-default", style: "color: #0078d9; font-size: 11px; margin-left: 5px;" %>
  </div>
  </div>
<% end %>
