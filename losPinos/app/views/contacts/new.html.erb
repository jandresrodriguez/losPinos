<div id="pad-wrapper" class="new-user">
  <div class="row-fluid header">
    <h3>Que ajuste desea realizar?</h3><br/><br/>
    <h4 class="fl">Haganoslo saber</h4>
  </div>

  <div class="row-fluid form-wrapper">
    <!-- left column -->
    <div class="span9 with-sidebar">
        <div class="container"><p id="notice"><%= notice %></p>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
  <div class="span12 field-box">
  		<label>Nombre:</label>
    	<%= f.text_field :name, required: true %>
	</div>
    <div class="span12 field-box">
    	<label>Email:</label>
    	<%= f.text_field :email, :required => true %>
    </div>
    <div class="span12 field-box textarea">
    	<label>Ajuste:</label>
    	<%= f.text_area :message, :as => :text, :required => true %> <br />
	</div>
    <div>
      </br>
      </br>
      <div style="margin-left:335px;">
      	<%= f.button :submit, 'Enviar Ajuste', class: "btn-glow primary" %>
      </div>
      
    </div>
  <% end %>
</div>
